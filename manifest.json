{
  "name": "Comment Mode",
  "description": "Read comments while watching YouTube videos",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions" : [
  "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/watch?*"
      ],
      "js": ["js/jquery.js", "js/script.js", "https://code.createjs.com/soundjs-0.6.2.min.js"]
    }
    ],
    "manifest_version": 2
  }
