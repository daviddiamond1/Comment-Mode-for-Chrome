{
  "manifest_version": 2,

  "name": "Comment Mode",
  "description": "Read comments while watching YouTube videos",
  "version": "0.0.0.1",
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

  "icons": {
    "16" : "icon.png",
    "48" : "icon.png",
    "128" : "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js" : ["jquery.js", "enable.js", "disable.js"]
    }
  ]
}
