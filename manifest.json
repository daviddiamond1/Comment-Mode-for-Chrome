{
  "name": "Comment Mode",
  "version": "1.0.1",
  "description": "Read comments while watching videos",
  "manifest_version": 2,
  "permissions": [
    "https://www.googleapis.com/*"
  ],
  "icons": {
    "16" : "icon.png",
    "48" : "icon.png",
    "128" : "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js" : ["jquery.js", "script.js"]
    }
  ]
}
